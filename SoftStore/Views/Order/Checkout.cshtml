@model Order

<div class="container">
    <div class="row" style="margin-top: 5rem;">
        <h3>Order Confirmation</h3>
        <form class="form-inline mt-3" asp-action="Checkout" method="post">
            <div class="form-group">
                <label asp-for="name"></label>
                <div class="col-md-5">
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-bg-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="surname"></label>
                <div class="col-md-5">
                    <input asp-for="surname" class="form-control" />
                    <span asp-validation-for="surname" class="text-bg-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="phone"></label>
                <div class="col-md-5">
                    <input asp-for="phone" class="form-control" />
                    <span asp-validation-for="phone" class="text-bg-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="mail"></label>
                <div class="col-md-5">
                    <input asp-for="mail" class="form-control" />
                    <span asp-validation-for="mail" class="text-bg-danger"></span>
                </div>
            </div>
            <button class="btn btn-success" type="submit">Place Order</button>
        </form>
    </div>
</div>